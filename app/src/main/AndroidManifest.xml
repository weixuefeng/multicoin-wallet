<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.explorer.wallettest">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.WalletTest"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".ui.scan.ScanActivity"
            android:exported="true" />
        <activity android:name=".ui.splash.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.home.HomeActivity" />
        <activity android:name=".ui.wallet.WalletListActivity" />
        <activity android:name=".ui.wallet.CreateWalletActivity" />
        <activity android:name=".ui.wallet.CurrentWalletActivity" />
        <activity android:name=".ui.wallet.asset.AssetDetailActivity" />
        <activity android:name=".ui.wallet.transfer.TransferAssetActivity" />
        <activity
            android:name=".ui.walletmanager.WalletManagerActivity"
            android:exported="true"
            android:theme="@style/AnimationActivity" />
        <activity
            android:name=".ui.receive.ReceiveActivity"
            android:exported="true" />
    </application>

</manifest>